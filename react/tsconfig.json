{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "esModuleInterop": true
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"],
  "typeAcquisition": {
    "enable": false
  }
}
